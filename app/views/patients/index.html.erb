<% if current_user %>
    <% if current_user.user? %>
    <br>
        <h1 class="font-bold text-center text-4xl mt-20">Sorry you do not have access to this page.</h1>
    <% else %>

        <div class="w-full">
        <br>
            <div class="flex justify-between items-center">
                <h1 style= "margin-left: 1.9%" class="font-bold text-4xl">Patients</h1>
                <%= link_to 'New patient', new_patient_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium hover:bg-sky-200 mr-6" %>
            </div>

            <div id="patients">
            <section class="w-78 h-50 bg-white rounded-xl drop-shadow-md m-6 relative p-6">

            <ul role="list" class="divide-y divide-gray-100">
            <% @patients.each do |patient| %>
                <li class="flex justify-between gap-x-6 py-5">
                <div class="flex gap-x-4">
                    <% randomNum = rand(1...50)%>
                    <% rand2 = rand(1...100)%>
                    <% if (randomNum)%rand2 > 0 %>
                        <img class="h-12 w-12 flex-none bg-gray-50 rounded-full" src="https://randomuser.me/api/portraits/men/<%= (randomNum)%rand2 %>.jpg" alt="profile_picture">
                    <% else %>
                        <img class="h-12 w-12 flex-none bg-gray-50 rounded-full" src="https://randomuser.me/api/portraits/women/<%= (randomNum)%rand2 %>.jpg" alt="profile_picture">
                    <% end %>
                    <div class="min-w-0 flex-auto">
                    <p class="text-sm font-semibold leading-6 text-gray-900"><%= patient.fname %></p>
                    <p class="mt-1 truncate text-xs leading-5 text-gray-500"><%= patient.nric %></p>
                    </div>
                </div>
                <div class="hidden sm:flex sm:flex-col sm:items-end">
                    <p>
                    <%= link_to "Show this patient", patient, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium cursor-pointer hover:bg-sky-200" %>
                </p>
                </div>
                </li>
                <% end %>
                </ul>
                </section>
            </div>
        </div>
    <% end %>
<% end %>
