<%= form_with(model: clinic) do |form| %>
  <% if clinic.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(clinic.errors.count, "error") %> prohibited this clinic from being saved:</h2>

      <ul>
        <% clinic.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div>
    <%= form.label :hospital_id %>
    <br>
    <select name='clinic[hospital_id]'>
      <% @hospitals.each do |hospital| %>
        <option value=<%= hospital.id %> <%= 'selected' if hospital.id == @clinic.hospital_id %>><%= hospital.name %></option>
      <% end %>
    </select>
  </div>


  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :location, style: "display: block" %>
    <%= form.text_field :location %>
  </div>

  <div>
    <%= form.submit class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium cursor-pointer hover:bg-sky-200" %>
  </div>
<% end %>
