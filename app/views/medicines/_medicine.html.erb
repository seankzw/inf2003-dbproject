<div id="<%= dom_id medicine %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= medicine.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Quantity:</strong>
    <%= medicine.quantity %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Price:</strong>
    <%= medicine.price %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Category:</strong>
    <%= medicine.category %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this medicine", medicine, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this medicine', edit_medicine_path(medicine), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
