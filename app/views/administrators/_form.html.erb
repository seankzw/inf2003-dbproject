<%= form_with(model: administrator, class: "contents") do |form| %>
  <% if administrator.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(administrator.errors.count, "error") %> prohibited this administrator from being saved:</h2>

      <ul>
        <% administrator.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :user_id %>
    <select name='administrator[user_id]' class="block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full">
      <% @users.each do |user| %>
        <option value=<%= user.id %>><%= user.email%></option>
      <% end %>
    </select>
  </div>


    <div class="my-5">
    <%= form.label :hospital_id %>
    <select name='administrator[hospital_id]' class="block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full">
    <% @hospitals.each do |hosp| %>
        <option value=<%= hosp.hospital_id %>><%= hosp.name %></option>
    <% end %>
    </select>
    </div>

  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
